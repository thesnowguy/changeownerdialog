<processing_script><![CDATA[updateUser(tName, rID, item_ref_field, fName);

function updateUser(t, r, u, f){
	var gr = new GlideRecord(t);
	if(gr.get(r)){
		gr.setValue(f, u);
		gr.update();
	} 

	var urlOnStack = GlideSession.get().getStack().bottom();
	response.sendRedirect(urlOnStack);
}

